from init_env import init_environment

env = init_environment("root")

#Include Path
incpath = ['.']
env.Append(CPPPATH = incpath)

#Linkflags -pg is used for profiling code.
env.Append(CXXFLAGS = ['-g3','-O2'], LINKFLAGS=['-pg'])

env.Program('usercode', ['TUserCode.cc',
		     'TNestedSample.cc', 
		     'TSimplePhysics.cc'])  

env.Library('usercode', ['TUserCode.cc',
		     'TNestedSample.cc', 
		     'TSimplePhysics.cc'])  